# EditorConfig is awesome: https://EditorConfig.org

# Top-level configuration
root = true

# Apply to all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C and C++ files
[*.{c,h,cpp,hpp}]
indent_style = tab
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab
indent_size = 4

# CMake files
[CMakeLists.txt]
indent_style = space
indent_size = 4

# JSON files (if any)
[*.json]
indent_style = space
indent_size = 2

# YAML files (if any)
[*.yaml]
indent_style = space
indent_size = 2

# Markdown files (if any)
[*.md]
trim_trailing_whitespace = false
